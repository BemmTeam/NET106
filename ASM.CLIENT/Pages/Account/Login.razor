@page "/login"
<link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

<EditForm Model="@login" OnValidSubmit="@LoginAccount">
    <DataAnnotationsValidator />
    <div class="logo"></div>
    <div class="login-block">
        <h1 class="memay">Login</h1>
        <InputText class="form-control" type="text" placeholder="Username" name="username" @bind-Value="@login.UserName"></InputText>
        <ValidationMessage For="() => login.UserName" class="badge bg-danger mt-1"></ValidationMessage>
        <br />
        <InputText class="form-control" type="password"  name="password"  placeholder="Password" @bind-Value="@login.Password"></InputText>
        <ValidationMessage For="() => login.Password" class="badge bg-danger mt-1"></ValidationMessage>
        <hr />
        <button type="submit">Submit</button>
    </div>
</EditForm>